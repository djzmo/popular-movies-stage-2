<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_trailer_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/trailer_play_padding"
        android:background="@null"
        android:src="@drawable/ic_play_arrow_black_24dp" />

    <TextView
        android:id="@+id/tv_trailer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_trailer_play"
        android:layout_toEndOf="@id/iv_trailer_play"
        android:layout_centerVertical="true"
        android:textSize="@dimen/heading_sub_medium_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trailer_separator_height"
        android:background="#DDDDDD"
        android:layout_below="@id/iv_trailer_play"
        />

</RelativeLayout>